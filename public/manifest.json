{
    "name":"ezsearch",
    "version":"0.0.1",
    "icons":{
        "16":"icons/calculator-16.png",
        "128":"icons/calculator-128.png"
    },
    "background": {
        "scripts": [ "background.js" ]
    },
    "browser_action": {
      "default_icon": "icons/calculator-128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": ["storage", "system.display", "tabs", "<all_urls>"],
    "manifest_version": 2,
    "offline_enabled":true,
    "description": "The non-coder elasticsearch query builder.",
    "author": "Younes El Alami, icode.co"
}
